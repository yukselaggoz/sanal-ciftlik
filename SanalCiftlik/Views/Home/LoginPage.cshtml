
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/css/ionicon/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/css/icheck/blue.css" rel="stylesheet" />
    @*<link href="~/Content/css/icheck/blue.min.css" rel="stylesheet" />*@
    <title>LoginPage</title>
    <style>
        body {
            background-image: url('../../Content/img/LoginArkaPlan.jpg');
            background-color: #cccccc;
            background-size: 1600px 880px;
        }
    </style>
</head>
<body>
    <div class="login-box">
        <div class="login-box-body" style="border:1px solid #CCCCCC;border-radius: 5px;">
            <div class="login-logo">
                <a href="#"><img src="~/Content/img/LogoCiftlikBeyaz.jpg" style="height:240px;width:330px" /></a>
            </div>
            <p class="login-box-msg">Oturum açmak için giriş yapınız</p>

            <div class="form-group has-feedback">
                <input type="text" id="inputUserName" class="form-control" placeholder="Kullanıcı Adı">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" id="inputPassword" class="form-control" placeholder="Şifre">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> Beni Hatırla
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" onclick="login();" class="btn btn-primary btn-block btn-flat">Giriş Yap</button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div align="center"><p>ya da</p> </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" onclick="registerPage()" class="btn btn-success btn-block btn-flat">Kaydol</button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div align="center"><p></p> </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" onclick="login();" class="btn btn-default btn-block btn-flat">Şifremi Unuttum</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins/icheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: "icheckbox_minimal-blue",
                radioClass: "iradio_minimal-blue"
            });
        });
    </script>
    <script src="~/Content/js/LoginPage.js"></script>
</body>
</html>
