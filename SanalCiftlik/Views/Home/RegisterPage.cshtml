
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/css/ionicon/ionicons.min.css" rel="stylesheet" />
    <link href="~/Content/css/icheck/blue.css" rel="stylesheet" />
    @*<link href="~/Content/css/icheck/blue.min.css" rel="stylesheet" />*@
    <title>LoginPage</title>
    <style>
        body {
            background-image: url('../../Content/img/LoginArkaPlan.jpg');
            background-color: #cccccc;
            background-size: 1600px 880px;
        }
    </style>
</head>
<body>
    <div class="login-box" style="height:240px;width:500px">
        <div class="login-box-body" style="border:1px solid #CCCCCC;border-radius: 5px;">
            <div class="login-logo">
                <a href="#"><img src="~/Content/img/LogoCiftlikBeyaz.jpg" style="height:240px;width:450px" /></a>
            </div>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="adSoyad" class="col-sm-3 control-label">Ad Soyad</label>
                    <div class="col-sm-9">
                        <input type="text" id="adSoyad" placeholder="Ad Soyad" class="form-control" autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label for="kullaniciAdi" class="col-sm-3 control-label">Kullanıcı Adı</label>
                    <div class="col-sm-9">
                        <input type="text" id="kullaniciAdi" placeholder="Kullanıcı Adı" class="form-control" autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" id="email" placeholder="Email" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-3 control-label">Şifre</label>
                    <div class="col-sm-9">
                        <input type="password" id="password" placeholder="Şifre" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="passwordAgain" class="col-sm-3 control-label">Şifre Tekrar</label>
                    <div class="col-sm-9">
                        <input type="password" id="passwordAgain" placeholder="Şifre Tekrar" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <label for="dogumTarihi" class="col-sm-3 control-label">Doğum Tarihi</label>
                    <div class="col-sm-9">
                        <input type="date" id="dogumTarihi" class="form-control">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox">Kullanım şartlarını okudum ve kabul ediyorum. <a href="#">(Şartlar)</a>
                            </label>
                        </div>
                    </div>
                </div> <!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button onclick="alertKullanici();" class="btn btn-primary btn-block">Kaydol</button>
                    </div>
                </div>
            </form> <!-- /form -->
        </div>
    </div>
    <script src="~/Content/js/plugins/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins/icheck/icheck.min.js"></script>
    <script src="~/Content/js/plugins/bootbox/bootbox.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: "icheckbox_minimal-blue",
                radioClass: "iradio_minimal-blue"
            });
        });
    </script>
    <script src="~/Content/js/RegisterPage.js"></script>
</body>
</html>
